{
  "name": "web3x-evm",
  "version": "1.0.0",
  "license": "MIT",
  "description": "EVM implementation and provider for web3x.",
  "repository": {
    "type": "git",
    "url": "https://github.com/xf00f/web3x.git"
  },
  "homepage": "https://github.com/xf00f/web3x",
  "bugs": {
    "url": "https://github.com/xf00f/web3x/issues"
  },
  "keywords": [
    "ethereum",
    "typescript",
    "web3",
    "evm"
  ],
  "contributors": [
    {
      "name": "xf00f",
      "email": "xf00f@protonmail.com",
      "url": "https://github.com/xf00f"
    }
  ],
  "sideEffects": false,
  "scripts": {
    "build": "yarn clean && tsc -p tsconfig.cjs.json && node ./package.js",
    "lint": "tslint --project tsconfig.json 'src/**/*.ts' --fix",
    "test": "jest",
    "clean": "rm -rf ./dest",
    "deploy": "yarn jest --clearCache && yarn build && npm publish dest"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": ".*\\.test\\.(tsx?|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "reporters": [
      "jest-dot-reporter"
    ],
    "rootDir": "./src"
  },
  "dependencies": {
    "@types/levelup": "^3.1.0",
    "bigint-buffer": "^1.1.2",
    "bn.js": "^4.11.8",
    "level-js": "^4.0.0",
    "levelup": "^4.0.0",
    "merkle-patricia-tree": "^3.0.0",
    "rustbn.js": "^0.2.0",
    "tslib": "^1.9.3",
    "web3x": "^3.0.11"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/memdown": "^3.0.0",
    "coveralls": "^3.0.2",
    "jest": "^24.5.0",
    "jest-dot-reporter": "^1.0.7",
    "memdown": "^3.0.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  }
}
